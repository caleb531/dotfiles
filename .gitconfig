# .gitconfig
# Caleb Evans

# User information
[user]
	name = Caleb Evans
	email = calebevans.me@gmail.com

# Store user credentials in OS X Keychain
[credential]
	helper = osxkeychain

# Handy Git aliases
[alias]
	# Display colored hierarchical log output
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all

# Core configuration
[core]
	# Use tab width of 4 spaces for git diff/show
	pager = less -x1,5
