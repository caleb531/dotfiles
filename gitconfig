# User information
[user]
	name = Caleb Evans
	email = caleb@calebevans.me

# Store user credentials in OS X Keychain
[credential]
	helper = osxkeychain

# Core configuration
[core]
	# Do not ignore case for filenames
	ignorecase = false
	# Use tab width of 4 columns for git diff/show
	pager = less -x1,5

# Handy Git aliases
[alias]
	# Display colored hierarchical log output
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
